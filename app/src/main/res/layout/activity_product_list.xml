<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mercapp.ProductListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Productos Emmel"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="00"
            android:textColor="@color/light_blue_900"
            android:textSize="16dp"
            android:textStyle="bold"
            android:translationX="90dp"
            />
        <TextView
            android:id="@+id/reparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="/"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="105dp"
            />

        <TextView
            android:id="@+id/counter_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="00"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="118dp" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<!--
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"

                android:src="@drawable/baseline_app_mydetails_24"
                android:translationX="40dp"
                app:layout_anchor="@id/search_view"
                app:layout_anchorGravity="top|end" />
-->

            <SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="90dp"
                android:background="@drawable/search_view_bg"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />


            <Button
                android:id="@+id/btnMostrarDialogo"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="POP"
                android:layout_marginTop="23dp"
                android:textSize="19dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/snipper"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/white"
                />



<!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/snipper"
                >
            </LinearLayout>
-->


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp" />
    </RelativeLayout>

</LinearLayout>


