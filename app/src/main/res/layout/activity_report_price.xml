<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreciosApp.ReportPriceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_person_24"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="0dp"
                    android:text="Reportes Precios"
                    android:layout_marginStart="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:text="Fecha: hoy 2023"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:background="@color/teal_200"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            >

            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >

                <EditText
                    android:id="@+id/cliente_txt"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:textSize="13dp"
                    android:hint="Zona/Distrito"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/snipper"
                    android:drawableStart="@drawable/baseline_add_location_alt_24"
                    />
            </LinearLayout>

            <Spinner
                android:id="@+id/distribuidor_txt"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="35dp"
                android:background="@drawable/snipper"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:textSize="20dp"
                android:text="MARCA"
                android:textStyle="bold"
                android:drawableStart="@drawable/baseline_branding_watermark_24"
            />

            <EditText
                android:id="@+id/brand_txt"
                android:layout_width="100dp"
                android:padding="5dp"
                android:textSize="13dp"
                android:hint="marca"
                android:textAlignment="center"
                android:layout_height="35dp"
                android:background="@drawable/snipper"
                />

            <Button
                android:id="@+id/btn_guardar"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:text="Agregar"
                android:textSize="8dp"
                android:background="#DD6C8BCA"
                />
        </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#775E06"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />



        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

            <EditText
                android:layout_width="80dp"
                android:padding="5dp"
                android:textSize="7dp"
                android:text="PRODUCTO"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:background="@drawable/snipper"
                />

            <EditText
                android:layout_width="60dp"
                android:padding="5dp"
                android:textSize="7dp"
                android:textAlignment="center"
                android:text="MARCA"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@drawable/snipper"

                />

            <EditText
                android:layout_width="60dp"
                android:padding="5dp"
                android:textSize="7dp"
                android:textAlignment="center"
                android:text="FRASCO"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@drawable/snipper"

                />

            <EditText
                android:layout_width="50dp"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:textSize="7dp"
                android:text="GRAMAJE"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@drawable/snipper"

                />

            <EditText
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textSize="7dp"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:text="PPRECIO"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@drawable/snipper"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#775E06"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />


    </LinearLayout>



</androidx.core.widget.NestedScrollView>