<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="29dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txt_store_id"
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:background="@drawable/rectagle"
                android:gravity="center_vertical|center"
                android:text="13"
                android:textColor="@android:color/white"
                android:textSize="7sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/producto"
                android:layout_width="64dp"
                android:textAlignment="center"
                android:layout_marginStart="2dp"
                android:layout_height="18dp"
                android:text="AJI AMARILLO"
                android:padding="2dp"
                android:textSize="7sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/snipper1"
                />


            <EditText
                android:id="@+id/marca_txt"
                android:layout_width="60dp"
                android:layout_marginStart="6dp"
                android:layout_height="23dp"
                android:padding="5dp"
                android:textSize="8dp"
                android:textAlignment="center"
                android:hint="marca"
                android:background="@drawable/snipper1"
                />

            <EditText
                android:id="@+id/frasco_txt"
                android:layout_width="60dp"
                android:layout_marginStart="7dp"
                android:layout_height="23dp"
                android:padding="5dp"
                android:textSize="8dp"
                android:textAlignment="center"
                android:hint="frasco"
                android:background="@drawable/snipper1"
                />

            <EditText
                android:id="@+id/gramaje_txt"
                android:layout_width="45dp"
                android:layout_marginStart="7dp"
                android:layout_height="23dp"
                android:padding="5dp"
                android:textSize="8dp"
                android:textAlignment="center"
                android:hint="50kg"
                android:background="@drawable/snipper1"
                />

            <EditText
                android:id="@+id/precio_txt"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="23dp"
                android:padding="5dp"
                android:textAlignment="center"
                android:textSize="8dp"
                android:hint="9.67"
                android:background="@drawable/snipper1"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

